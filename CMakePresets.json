{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "linux-gcc-debug",
            "displayName": "GCC Debug",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/linux-gcc-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "win-msvc-debug",
            "displayName": "Default Configuration",
            "description": "Default build configuration with all dependencies (Visual Studio generator for building)",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "binaryDir": "${sourceDir}/build/win-msvc-debug"
        },
        {
            "name": "win-msvc-debug-ninja",
            "displayName": "MSVC Debug (Ninja for compile_commands.json)",
            "description": "Ninja generator for generating compile_commands.json. Hardened to avoid MSYS sh interference.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/win-msvc-debug-ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_NINJA_FORCE_RESPONSE_FILE": "ON",
                "CMAKE_VERBOSE_MAKEFILE": "ON",
                "CMAKE_EXE_LINKER_FLAGS": "/MANIFEST:NO",
                "CMAKE_SHARED_LINKER_FLAGS": "/MANIFEST:NO",
                "CMAKE_MODULE_LINKER_FLAGS": "/MANIFEST:NO",
                "CMAKE_TRY_COMPILE_TARGET_TYPE": "STATIC_LIBRARY"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "win-msvc-debug",
            "configurePreset": "win-msvc-debug",
            "jobs":8
        },
        {
            "name": "linux-gcc-debug",
            "configurePreset": "linux-gcc-debug",
            "jobs":8
        },
        {
            "name": "win-msvc-debug-ninja",
            "configurePreset": "win-msvc-debug-ninja",
            "jobs":8
        }
    ]
}